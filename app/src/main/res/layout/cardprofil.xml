<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardprofil"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#FFFFFF"
    android:layout_margin="25dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout

        android:id="@+id/layoutprofil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="60dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/man"
            android:layout_centerHorizontal="true"
            app:civ_border_color="#000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:text="Junior Alfredo Benerd Setiawan"
            android:textStyle="bold"
            android:layout_below="@id/profile_image"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:textColor="@color/black"
            android:text="UI/UX Designer Android"
            android:textStyle="italic"
            android:layout_below="@id/name"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@color/black"
            android:text="Projects"
            android:textStyle="normal"
            android:layout_below="@id/skill"
            android:textAlignment="textStart"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/Number06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:textColor="@color/black"
            android:text="06"
            android:textStyle="bold"
            android:layout_alignStart="@id/Project"
            android:layout_below="@id/Project"

            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Followers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_below="@id/skill"
            android:textColor="@color/black"
            android:text="Followers"
            android:textStyle="normal"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number340" />

        <TextView
            android:id="@+id/Following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@color/black"
            android:text="Following"
            android:textStyle="normal"
            android:textAlignment="textEnd"
            android:layout_below="@id/skill"
            android:layout_alignParentEnd="true"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/number340"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Followers"
            android:layout_centerHorizontal="true"
            android:text="340"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>


            <TextView
                android:id="@+id/number373"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="327"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_alignStart="@id/Following"
                android:layout_below="@id/Following"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>